.top-con {
    margin: 20px 40rpx;
    border-bottom: 1px solid #e9e9e9;
    text-align: center;
    padding-bottom: 20px;
}

.top-con image {
    width: 80px;
    height: 80px;
    border-radius: 60px;
}

.platform-title {
    text-align: center;
    font-size: 14pt;
    margin-top: 15px;
}

.platform-intro {
    margin-top: 7px;
    font-size: 11pt;
    color: #757575;
}

.main-con {
    margin: 20px 40rpx;
}

.auth-title {
    font-size: 11pt;
    color: #212121;
}

.auth-info {
    font-size: 10pt;
    color: #757575;
    margin-top: 15px;
}

.btn-con {
    margin-top: 20px;
}

.btn-con button {
    width: 45%;
    display: inline-block;
    margin-right: 10%;
    font-size: 12pt;
    font-weight: normal;
    color: #6b6d6b;
    border: 1px solid #e3e3e3;
}

.btn-con button.success {
    background: #57be4f;
    color: #ffffff;
    border: 1px solid #57be4f;
}

.btn-con button:last-child {
    margin-right: 0px;
}

button::after {
    border: none;
}